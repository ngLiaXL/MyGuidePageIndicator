<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ngliaxl.myguidepageindicator.MyIndicator
        android:id="@+id/myindicator"
        app:ind_item_height="40dp"
        app:ind_item_width="40dp"
        app:ind_item_margin_up="5dp"
        app:ind_item_margin_bottom="5dp"
        app:ind_item_margin_left="1px"
        app:ind_item_margin_right="1px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>
